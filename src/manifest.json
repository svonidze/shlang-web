{
    "manifest_version": 2,
    "name": "Shlang",
    "description": "Parse any text before reading. TODO rewrite",
    "version": "0.1",
    "browser_action": {
        "default_icon": "favicon.ico",
        "default_title": "shalng dashboard."
    },
    "permissions": [
        "debugger",
        "storage",
        "activeTab",
        "tabs",
        "contextMenus"
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "background": {
        "persistent": false,
        "scripts": [
            "background.js"
        ]
    }
}