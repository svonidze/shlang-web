{
  "manifest_version": 2,
  "name": "shlang: recognize any text before reading",
  "short_name": "shlang",
  "version": "0.0.1.5",
  "description": "Tool to group text by words to get known unknown yet words from any kind of content either articles, movie subtitles or just text",
  "oauth2": {
    "client_id": "358710366205-e2oj54gn8drsmc02fc63o8nrtocb7mlm.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/drive"
    ]
  },
  "browser_action": {
      "default_icon": "favicon.ico",
      "default_title": "shlang"
  },
  "permissions": [
      "debugger",
      "storage",
      "activeTab",
      "tabs",
      "contextMenus",
      "identity",
      "https://ssl.gstatic.com/",
      "https://www.googleapis.com/",
      "https://accounts.google.com/"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://apis.google.com; object-src 'self'",
  "background": {
      "persistent": false,
      "scripts": [
          "chrome/background.js"
      ]
  }
}